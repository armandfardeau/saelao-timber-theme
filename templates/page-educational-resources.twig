{% extends "base-with-header.twig" %}

{% block content %}
    <div class='container-grid'>
        <div class='presentation__text'>
            <div class='part__text teamtext'>
                <h2>{{ post.get_field('title_team') }}</h2>
            </div>
            <p>{{ post.content }}</p>
        </div>
        <div class="resources_section">
            {% for item in post.get_field('resources') %}
                <div class="resources_item">
                    <a href="{{ item.resources_link }}" class="resources_item-inside">
                        <img src="{{ item.resources_background_image }}" alt="{{ item.resources_name }}">
                        <h2 class="part__text">{{ item.resources_name }}</h2>
                        <p class="viewpro">{{ item.resource_button_text }}</p>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div><!-- /content-wrapper -->

{% endblock %}