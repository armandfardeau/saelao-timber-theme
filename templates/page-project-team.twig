{% extends "base-with-header.twig" %}

{% block header_content %}
    {{ post.get_field('team_title') }}
    <span>{{ post.get_field('team_subtitle') }}</span>
{% endblock %}

{% block content %}
    <div class='container-grid'>
        <div class='presentation__text'>
            <img src="{{ post.get_field('logo_project') }}" alt="{{ post.get_field('project_title') }}"
                 class='img-project'>
        </div>
    </div>

    <div class="content-wrapper">
        <article class="post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
            <section class="article-content">
                <div class="article-body">
                    {{ post.content }}
                </div>
            </section>
        </article>
    </div><!-- /content-wrapper -->
    {% for item in post.get_field('team_members') %}
        <div class="team-members">
            <img src="{{ item.member_picture }}" alt="">
            <h3>{{ item.member_name }}</h3>
            <p>{{ item.member_description }}</p>
        </div>
    {% endfor %}
{% endblock %}