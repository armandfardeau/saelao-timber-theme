{% extends "base.twig" %}

{% block content %}
    <div class='sidenav' id='mySidenav'>
        <img onclick="closeNav()" id='crossmenu' class='iconeMenu' src="{{ site.theme.link }}/dist/images/cross.png"
             alt="">
        <div class="mobile-links">
            {% include "header-menu.twig" %}
        </div>
    </div>

    <div>
        <h1 id='ctn-movable' class='home-presentation__text'>{{ home.get_field('home_presentation_title') }}
            <span>{{ home.get_field('home_presentation_subtitle') }}</span></h1>
        <div id='ctn-donate' class="mobile-donation">
            Donate
        </div>
    </div>
    <div class="header__border">
        <img src="{{ home.get_field('header_background_cropper') }}">
    </div>
    <div class='container-grid'>
        <div class='presentation__text'>
            <p>{{ home.get_field('home_presentation_text') }}</p>
        </div>

        {# This part is looped trough our values acf fields #}
        <a name="whoweare"></a>
        <div class='part__text'>
            <h2>{{ home.get_field('our_values_main_title') }}</h2>
        </div>
        <div class='timeline-place'>
            <section id="timeline">
                <div class='timeline__border'></div>
                {% set i = 0 %}
                {% for item in home.get_field('values') %}
                    {% set i = i + 1 %}
                    <div class="timeline-block">
                        <div class="timeline-img">
                            <img src="{{ item.value_icon }}" alt="{{ item.value_title }}">

                        </div> <!-- cd-timeline-img -->
                        <div class="timeline-content">
                            <h2>{{ item.value_title }} <img onclick="myFunction{{ i }}()" id='myARROW{{ i }}'
                                                            class='Arrow'
                                                            src="{{ site.theme.link }}/dist/images/arrowleft.png"
                                                            alt="" style="transform: rotate(0deg);"></h2>
                            <h3>{{ item.value_subtitle }}</h3>
                            <p id='myDIV{{ i }}'>{{ item.value_description }}</p>
                        </div> <!-- cd-timeline-content -->
                    </div> <!-- cd-timeline-block -->
                {% endfor %}
                <div class='timeline-end__border'></div>
            </section>
        </div>

        {# This part is from our projects acf fields #}
        <div class='project'>
            <h2>{{ home.get_field('our_projects_title') }}</h2>
            <p>{{ home.get_field('our_projects_description') }}</p>
            {% for item in home.get_field('our_project_banner') %}
                <a href='{{ item.project_button_link }}'>
                    <div class='project__box'>
                        <img src="{{ item.project_banner_background }}" alt="">
                        <h2>{{ item.project_name }}</h2>
                        <div class="project__text">
                            <ul>
                                <li>
                                    <p>{{ item.project_description }}</p>
                                </li>
                                <li>
                                    <p class='viewpro'>{{ item.project_button_name }}</p>
                                </li>

                            </ul>
                        </div>
                    </div>
                </a>
            {% endfor %}
        </div>
    </div>
    {# This part is looped trough our values acf fields #}
    <div class='stat__number'>
        <div class='container-grid__last'>
            <div class='stat-content'>
                <div class='part__text'>
                    <h2>{{ home.get_field('few_number_title') }}</h2>
                    <p>{{ home.get_field('few_numbers_description') }}</p>
                </div>


                <div class="stat__number-pos">
                    {% for item in home.get_field('few_numbers') %}
                        <ul>
                            <li><h2>{{ item.number }}</h2></li>
                            <li><h3>{{ item.number_description }}</h3></li>
                        </ul>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

    <div class='live container-grid__live'>
        <div class='part__text help'>
            <h2>{{ home.get_field('want_to_help_us_title') }}</h2>
            <a href="{{ home.get_field('want_to_help_us_button_link') }}">
                <button type="button" name="button">{{ home.get_field('want_to_help_us_button_message') }}</button>
            </a>
        </div>

        <div class='part__text'>
            <h2>Live</h2>
        </div>

        <div class='live-collection'>
            <div class="live-container container-grid__live">
                <ul>
                    <li><img src="{{ site.theme.link }}/dist/images/1.png" alt=""/></li>
                    <li><img src="{{ site.theme.link }}/dist/images/2.png" alt=""/></li>
                    <li><img src="{{ site.theme.link }}/dist/images/3.png" alt=""/></li>
                    <li><img src="{{ site.theme.link }}/dist/images/4.png" alt=""/></li>
                    <li><img src="{{ site.theme.link }}/dist/images/5.png" alt=""/></li>
                    <li><img src="{{ site.theme.link }}/dist/images/6.png" alt=""/></li>

                </ul>

            </div>

        </div>
        <div class='partners'>
            <a name="partners"></a>
            <div class='part__text'>
                <h2>{{ home.partners_title }}</h2>
            </div>
            <p>{{ home.partners_description }}</p>
            <ul>
                {% for item in home.get_field('partners') %}
                    <li class="partners_logo partners_logo_{{ loop.index }}" data-tab="{{ loop.index }}">
                        <img src="{{ item.partner_image }}" alt="{{ item.partner_name }}"
                             id="{{ item.partner_name|sanitize }}">
                    </li>
                {% endfor %}
            </ul>

        </div>
    </div>
    <div class="partners__info">
        <div class='container-grid__partners'>
            {% for item in home.get_field('partners') %}
                <p class='partner_text partner_text_{{ loop.index }}'>
                    {{ item.partners_description }}
                </p>
            {% endfor %}
        </div>
    </div>
    {% if(home.get_field('transparency_title')) %}
        <div class="transparency">
            <img src="{{ home.get_field('transparency_background') }}" alt="{{ home.get_field('transparency_title') }}">
            <img src="{{ home.get_field('transparency_logo') }}" alt="transparency logo">
            <h3>{{ home.get_field('transparency_title') }}</h3>
            <a href="{{ home.get_field('transparency_button_link') }}">
                <button>{{ home.get_field('transparency_button_text') }}</button>
            </a>
        </div>
    {% endif %}
{% endblock %}