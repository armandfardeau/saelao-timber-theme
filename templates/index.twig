{% extends "base.twig" %}

{% block content %}
    <div class='sidenav' id='mySidenav'>
        <img onclick="closeNav()" id='crossmenu' class='iconeMenu' src="{{ site.theme.link }}/dist/images/cross.png"
             alt="">
        <div class="mobile-links">
            {% include "header-menu.twig" %}
        </div>
    </div>

    <div>
        <h1 id='ctn-movable' class='home-presentation__text'>{{ home.get_field('home_presentation_title') }}
            <span>{{ home.get_field('home_presentation_subtitle') }}</span></h1>
        <div id='ctn-donate' class="mobile-donation">
            Donate
        </div>
    </div>
    <div class="header__border">
        <img src="{{ home.get_field('header_background_cropper') }}">
    </div>
    <div class='container-grid'>
        <div class='presentation__text'>
            <p>{{ home.get_field('home_presentation_text') }}</p>
        </div>

        {# This part is looped trough our values acf fields #}
        <div class='part__text'>
            <h2>{{ home.get_field('our_values_main_title') }}</h2>
        </div>
        <div class='timeline-place'>
            <section id="timeline">
                <div class='timeline__border'></div>
                {% set i = 0 %}
                {% for item in home.get_field('values') %}
                    {% set i = i + 1 %}
                    <div class="timeline-block">
                        <div class="timeline-img">
                            <img src="{{ item.value_icon }}" alt="{{ item.value_title }}">

                        </div> <!-- cd-timeline-img -->
                        <div class="timeline-content">
                            <h2>{{ item.value_title }} <img onclick="myFunction{{ i }}()" id='myARROW{{ i }}'
                                                            class='Arrow'
                                                            src="{{ site.theme.link }}/dist/images/arrowleft.png"
                                                            alt=""></h2>
                            <h3>{{ item.value_subtitle }}</h3>
                            <p id='myDIV{{ i }}'>{{ item.value_description }}</p>
                        </div> <!-- cd-timeline-content -->
                    </div> <!-- cd-timeline-block -->
                {% endfor %}
                <div class='timeline-end__border'></div>
            </section>
        </div>

        {# This part is from our projects acf fields #}
        <div class='project'>
            <h2>{{ home.get_field('our_projects_title') }}</h2>
            <p>{{ home.get_field('our_projects_description') }}</p>

            <a href='#'>
                <div class='project__box'>


                    <img src="{{ site.theme.link }}/dist/images/HOME_SAELAO.png" alt="">

                    <a href="#"><h2>Sae lao</h2></a>
                    <div class="project__text">
                        <ul>
                            <li><p>Project description Project description Project description Project description
                                    Project
                                    descriptionProject descriptionProject descriptionProject description</p></li>

                            <li><p class='viewpro'>View the project</p></li>

                        </ul>
                    </div>
                </div>
            </a>

            <div class='project__box'>

                <img src="{{ site.theme.link }}/dist/images/ORGANIC_RESTAURANT.png" alt="">

                <a href="#"><h2>Sae lao</h2></a>
                <div class="project__text">
                    <ul>
                        <li><p>Project description Project description Project description Project description Project
                                descriptionProject descriptionProject descriptionProject description</p></li>

                        <li><p class='viewpro'>View the project</p></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>


    {# This part is looped trough our values acf fields #}
    <div class='stat__number'>
        <div class='container-grid__last'>
            <div class='stat-content'>
                <div class='part__text'>
                    <h2>{{ home.get_field('few_number_title') }}</h2>
                    <p>{{ home.get_field('few_numbers_description') }}</p>
                </div>


                <div class="stat__number-pos">
                    {% for item in home.get_field('few_numbers') %}
                        <ul>
                            <li><h2>{{ item.number }}</h2></li>
                            <li><h3>{{ item.number_description }}</h3></li>
                        </ul>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

    <div class='live container-grid__live'>
        <div class='part__text help'>
            <h2>{{ home.get_field('want_to_help_us_title') }}</h2>
            <a href="{{ home.get_field('want_to_help_us_button_link') }}">
                <button type="button" name="button">{{ home.get_field('want_to_help_us_button_message') }}</button>
            </a>
        </div>
        <h2 class='live'>Live</h2>

        <div class='live-collection'>
            <div class="live-container container-grid__live">
                <ul>
                    <li><img src="{{ site.theme.link }}/dist/images/1.png" alt=""/></li>
                    <li><img src="{{ site.theme.link }}/dist/images/2.png" alt=""/></li>
                    <li><img src="{{ site.theme.link }}/dist/images/3.png" alt=""/></li>
                    <li><img src="{{ site.theme.link }}/dist/images/4.png" alt=""/></li>
                    <li><img src="{{ site.theme.link }}/dist/images/5.png" alt=""/></li>
                    <li><img src="{{ site.theme.link }}/dist/images/6.png" alt=""/></li>

                </ul>

            </div>

        </div>
        <div class='partners'>
            <div class='part__text'>
                <h2>{{ home.partners_title }}</h2>
            </div>
            <p>{{ home.partners_description }}</p>
            <ul>
                {% for item in home.get_field('partners') %}
                    <li>
                        <img src="{{ item.partner_image }}" alt="{{ item.partner_name }}"
                             id="{{ item.partner_name|sanitize }}">
                    </li>
                {% endfor %}
            </ul>

        </div>

    </div>
    <div class="partners__info">
        <div class='container-grid__partners'>

            {% set t = 0 %}
            {% for item in home.get_field('partners') %}
                {% set t = t + 1 %}
                <p class='partner_text{{ t }}'>
                    {{ item.partners_description }}
                </p>
            {% endfor %}
        </div>
    </div>
    <div class='form'>
        <h2>Any questions ?</h2>
        <div class='contact__form'>
            <select>
                <option value="" disabled selected>Select your option</option>
                <option value="volvo">Volvo</option>
                <option value="saab">Saab</option>
                <option value="mercedes">Mercedes</option>
                <option value="audi">Audi</option>
            </select>
            <input type="text" name="" value="" placeholder=" E-mail adress">
            <ul>
                <li><input type="text" name="" value="" placeholder=" Name"></li>
                <li><input type="text" name="" value="" placeholder=" Surname"></li>
            </ul>
            <textarea name="name" rows="8" cols="80" placeholder="Your message..."></textarea>
            <button class='button-ques' type="submit" name="button">Send questions</button>
        </div>
    </div>
    <div class='newsletter'>
        <div class="newsletter__position">
            <ul>
                <div class="subscribe">
                    <li><h2>Subscribe to our newsletter</h2></li>
                </div>
                <div class="subscribe-form">
                    <li><input type="text" name="" value="" placeholder=" Name"></li>
                    <li>
                        <button class='button-subs' type="submit" name="button">Subscribe</button>
                    </li>
                </div>
            </ul>
        </div>
    </div>

    <div class='container-grid__last'>
        <div class='contact'>
            <ul>
                <li>
                    <div class='contactus'>
                        <h2>Contact us </h2>
                        <p>Organic Farm Vang Vieng<br>
                            P.O. Box 253<br>
                            Vang Vieng<br>
                            Vientiane Province, LAO P.D.R.<br>
                        </p>
                        <p>+856-(0)20-2292 8630 <span>- EEFA office</span><br>
                            +856-(0)20 9194 9923 <span>- Sengkeo Frichitthavong</span><br>
                            <span>office@eefalaos.org</span></p>
                    </div>
                </li>
                <li>
                    <div class='map'><img src="{{ site.theme.link }}/dist/images/map.png" alt=""></div>

                </li>
                <li>
                    <div class='social'>
                        <h2>Follow us </h2>
                        <ul>
                            <li class='circle'><img src="{{ site.theme.link }}/dist/images/FACEBOOK.svg" alt=""></li>
                            <li class='circle'><img src="{{ site.theme.link }}/dist/images/TWITTER.svg" alt=""></li>
                            <li class='circle'><img src="{{ site.theme.link }}/dist/images/INSTAGRAM.svg" alt=""></li>
                            <li class='circle'><img src="{{ site.theme.link }}/dist/images/YOUTUBE.svg" alt=""></li>
                        </ul>
                    </div>
                </li>
            </ul>
        </div>
    </div>
    {#  {% for post in posts %}
    {% include ['tease-'~post.post_type~'.twig', 'tease.twig'] %}
  {% endfor %}#}
{% endblock %}
