{% set header_background = post.thumbnail.src %}

{% extends "base-with-header.twig" %}

{% block content %}
    <div class='container-grid'>
        <div class='presentation__text'>
            <div class='part__text teamtext'>
                <h2>{{ post.title }}</h2>
            </div>
            <p>
                <span>By</span>
                <a href="{{ post.author.path }}"> {{ post.author.name }} </a><span>&bull;</span> {{ post.post_date|date }}
            </p>
            <p>{{ post.content }}</p>
        </div>
    </div>
{% endblock %}
