<div class="footer">

    {% if contact_form is not defined or contact_form != false %}
        <div class="container-grid">
            <div class="contact" id="contact">
                <h2 class="contact-title">{{ home.get_field('title_any_question') }}</h2>
                <div class="contact-form">
                    {{ home.get_field('shortcode_contact')|shortcodes }}
                </div>
            </div>
        </div>
    {% endif %}

    <div class="newsletter">
        <div class="container-grid">
            <div class="newsletter-content">
                <h2 class="subscribe-text">
                    {{ home.get_field('newsletter_title') }}
                </h2>
                <div class="subscribe-form">
                    {{ home.get_field('newsletter_content') }}
                </div>
            </div>
        </div>
    </div>

    <div class="container-grid">
        <div class="footer-content">
            <div class="footer-column contactus">
                <h2 class="contactus-title">{{ home.get_field('title_contact_footer') }}</h2>
                <div class="contactus-text">{{ home.get_field('adress_contact_footer') }}</div>
            </div>
            {% if (home.get_field('image_location_footer')) %}
                <div class="footer-column map">
                    <img src="{{ home.get_field('image_location_footer') }}"
                         alt="{{ home.get_field('adress_contact_footer') }}">
                </div>
            {% endif %}
            {% if (home.get_field('social_media')) %}
                <div class="footer-column social">
                    <h2 class="social-title">Follow us</h2>
                    <div class="social-links">
                        {% for item in home.get_field('social_media') %}
                            <a class="social-item" href="{{ item.social_media_link }}">
                                <img src="{{ item.social_media_icon }}" alt="">
                            </a>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}

        </div>
    </div>

    {% include 'footer-menu.twig' %}
</div>
